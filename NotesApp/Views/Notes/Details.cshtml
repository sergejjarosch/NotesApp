@model NotesApp.Models.Note

@{
    ViewData["Title"] = "Note Details";
}

<h2>Note Details</h2>

<div class="mb-3">
    <h4>Title:</h4>
    <p>@Model.Title</p>
</div>

<div class="mb-3">
    <h4>Content:</h4>
    <p>@Model.Content</p>
</div>

<div class="mb-3">
    <h4>Date:</h4>
    <p>@Model.Date.ToShortDateString()</p>
</div>

<div class="mb-3">
    <h4>Category:</h4>
    <p>@Model.Category?.Name</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-primary">Back to List</a>
