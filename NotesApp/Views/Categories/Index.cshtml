@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<a asp-action="Create" class="btn btn-primary">Create New Category</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th class ="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm" onclick="return confirmDelete()">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this category?");
    }
</script>
